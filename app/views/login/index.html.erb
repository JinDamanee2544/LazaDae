<div class='container d-flex justify-content-center align-items-center'>
  <div class='p-4 shadow-lg rounded bg-white'>
    <h1 class='font-weight-bold text-center'>Login</h1>
    <%= form_with url:login_control_path ,class:'form d-flex flex-column' do |f| %>
      <%= f.label :email ,class:'form-label'%>
      <%= f.text_field :email ,class:'form-control'%>
      <%= f.label :password ,class:'form-label' %>
      <%= f.password_field :password ,class:'form-control'%>
      <%= f.submit 'submit' ,class:'btn btn-primary mt-4'%>
    <% end %>
    <%= button_to "Test Logout",login_destroy_path,method: :post ,class:'btn btn-danger mt-2'%>
  </div>
</div>
