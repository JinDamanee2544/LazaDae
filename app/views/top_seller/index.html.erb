<div class='container d-flex justify-content-center align-items-center'>
  <main class='p-4 shadow-lg rounded bg-white'>
    <div class='d-flex flex-row'>
      <div>
        <h1 class='text-center fw-bold p-5'>Top Seller</h1>
        <%= render 'top_seller/option'%>
      </div>
      <div>
        <% if not @top_seller_item.nil? %>
          <div class='p-4'>
            <div class='text-center mb-4'>
              <h4> Sorted by Sold Item  </h4>
              <label>
                For <%= @start_date%> - <%= @end_date %>
              </label>
            </div>
            <%= render 'top_seller/topItem'%>
          </div>
        <% end %>
        <% if not @top_seller_price.nil? %>
          <div class='p-4'>
            <div  class='text-center mb-4'>
              <h4> Sorted by Revenue </h4>
              <label>
                For <%= @start_date%> - <%= @end_date %>
              </label>
              <%= render 'top_seller/topPrice'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>
</div>
