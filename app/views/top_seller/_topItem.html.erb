<% if (@top_seller_item.empty?)%>
  <h1 class='text-center'>No Item</h1>
<% else %>
  <table id="tableItem" class="strip">
    <thead class='bg-dark text-light'>
      <tr>
        <th>Name</th>
        <th>Sold Item</th>
      </tr>
    </thead>
    <tbody>
      <% @top_seller_item.each do |t| %>
        <tr>
          <td> <%= User.find(t.seller_id).name %> </td>
          <td> <%= t.criteria %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>
<script>
  $(document).ready(function() {
    $("#tableItem").DataTable();
  });
</script>
