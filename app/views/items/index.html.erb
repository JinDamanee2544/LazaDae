<p style="color: green"><%= notice %></p>
<h1>Items</h1>
<div id="items">
  <% @items.each do |item| %>
    <div class='my-4'>
      <%= render item %>
      <p>
        <%= link_to "Show this item", item ,class:'btn btn-primary'%>
      </p>
    </div>
  <% end %>
  <%= link_to "New item", new_item_path ,class:'btn btn-success my-4'%>
  <%= button_to "Enable All Items", enableAllItem_path, method: :post, data: { confirm: "Are you sure?" },class:'btn btn-warning my-4'%>
</div>
